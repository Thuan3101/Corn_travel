@{
    ViewBag.Title = "Danh sách Tour";
}

<link rel="stylesheet" href="/css/areas/admin/tourmanagement/tourmanagement.css" />

<main>
    <div class="tour-list-container">
        <div class="row">
            <div class="col-md-12">

                <h2 class="h2">Danh sách Tour</h2>

                <!-- Thanh tìm kiếm -->
                <div class="search-container">
                    <div class="form-inline">
                        <!-- Tìm kiếm theo tên tour -->
                        <input type="text" id="searchByName" class="form-control mr-2" placeholder="Tìm theo tên tour" />

                        <!-- Tìm kiếm theo loại tour -->
                        <select id="searchByType" class="form-control mr-2">
                            <option value="">Tất cả loại tour</option>
                            <option value="1">Tour trong nước</option>
                            <option value="2">Tour ngoài nước</option>
                            <option value="3">Tour kết hợp</option>
                        </select>


                        <!-- Nút tìm kiếm -->
                        <button id="searchButton" class="btn btn-primary">Tìm kiếm</button>
                        <a href="/admin/tourmanagement/addtours" class="btn btn-addtour">Thêm tour</a>
                    </div>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Ảnh</th>
                            <th>Tên tour</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Ngày khởi hành</th>
                            <th>Ngày kết thúc</th>
                            <th>Số lượng</th>
                            <th>Điểm xuất phát</th>
                            <th>Điểm đến</th>
                            <th>Loại tour</th>
                            <th>Chỉnh sửa</th>

                        </tr>
                    </thead>
                    <tbody id="tour-list">
                        <!-- Dữ liệu từ API sẽ được thêm vào đây -->
                    </tbody>
                </table>
            </div>
            <div class="pagination-container">
                <button id="prev-page-button" class="btn btn-primary" style="display: none;">Trang trước</button>
                <span id="page-number">Trang 1</span>
                <button id="next-page-button" class="btn btn-primary" style="display: none;">Trang sau</button>
            </div>

        </div>

    </div>
<!-- Popup Sửa Tour -->
<div id="editTourModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-button" id="closeEditModal">&times;</span>
        <h2>Sửa Tour</h2>
        <form id="editTourForm">
            <input type="hidden" id="editTourId" />
            <div>
                <label for="editTourImage">Ảnh:</label>
                <input type="file" id="editTourImage" accept="image/*" />
            </div>

            <div>
                <label for="editTourName">Tên tour:</label>
                <input type="text" id="editTourName" />
            </div>
            <div>
                <label for="editTourDescription">Mô tả:</label>
                <textarea id="editTourDescription"></textarea>
            </div>
            <div>
                <label for="editTourPrice">Giá:</label>
                <input type="number" id="editTourPrice" />
            </div>
            <div>
                <label for="editTourStartDate">Ngày khởi hành:</label>
                <input type="date" id="editTourStartDate" />
            </div>
            <div>
                <label for="editTourEndDate">Ngày kết thúc:</label>
                <input type="date" id="editTourEndDate" />
            </div>
            <div>
                <label for="editTourSeats">Số lượng:</label>
                <input type="number" id="editTourSeats" />
            </div>

            <div>
                <label for="editTourStartPlace">Điểm xuất phát:</label>
                <input type="text" id="editTourStartPlace" />
            </div>
            <div>
                <label for="editTourEndPlace">Điểm đến:</label>
                <input type="text" id="editTourEndPlace" />
            </div>
            <div>
                <label for="editTourType">Loại tour:</label>
                <select id="editTourType">
                    <option value="1">Tour trong nước</option>
                    <option value="2">Tour ngoài nước</option>
                    <option value="3">Tour kết hợp</option>
                </select>
            </div>

            <div>
                <button type="submit" id="updateTourButton">Cập nhật</button>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/js/areas/admin/tourmanagemnt/tourmanagement.js"></script>
