<link rel="stylesheet" href="~/css/areas/admin/usermanagement/adduser.css" />

<div class="container mt-5">
    <a href="/admin/usermanagement/user" class="btn btn-back">Quay lại</a>
    <h1>Thêm người dùng mới</h1>
    <div class="mt-4">
        <form id="addUserForm">
            <div class="form-group">
                <label>Email</label>
                <input type="email" id="addUserEmail" class="form-control" placeholder="Nhập email" required>
            </div>
            <div class="form-group">
                <label>Tên</label>
                <input type="text" id="addUserFirstName" class="form-control" placeholder="Nhập tên" required>
            </div>
            <div class="form-group">
                <label>Họ</label>
                <input type="text" id="addUserLastName" class="form-control" placeholder="Nhập họ" required>
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="tel" id="addUserPhoneNumber" class="form-control" placeholder="Nhập số điện thoại" required>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" id="addUserAddress" class="form-control" placeholder="Nhập địa chỉ" required>
            </div>
            <div class="form-group">
                <label>Giới tính</label>
                <select id="addUserGender" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
            </div>
            <div class="form-group">
                <label>Ngày sinh</label>
                <input type="date" id="addUserBirthDate" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" id="addUserPassword" class="form-control" placeholder="Nhập mật khẩu" required>
            </div>
            <div class="form-group">
                <label>Nhập lại mật khẩu</label>
                <input type="password" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
            </div>
            <div class="form-group">
                <label>Vai trò</label>
                <select id="addUserRole" class="form-control" required>
                    <!-- Vai trò sẽ được thêm từ API -->
                </select>
            </div>
            <button type="submit" class="btn btn-success">Thêm người dùng</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/areas/admin/usermanagement/adduser.js"></script>
