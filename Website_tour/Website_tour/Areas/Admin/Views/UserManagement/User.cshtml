
<link rel="stylesheet" href="~/css/areas/admin/usermanagement/usermanagement.css" />

<div class="container mt-5">
    <h1>Quản lý người dùng</h1>
    <div class="mb-3">
        <input type="text" id="searchByEmail" placeholder="Tìm kiếm theo email" class="form-control" style="width: 300px; display: inline-block;">
        <select id="searchByRole" class="form-control" style="width: 200px; display: inline-block;">
            <option value="role.roleId">Tất cả vai trò</option>
            <!-- Vai trò sẽ được thêm api -->
        </select>
        <button id="searchButton" class="btn btn-primary">Tìm kiếm</button>
        <a href="/admin/usermanagement/adduser" class="btn btn-adduser">Thêm người dùng</a>
    </div>

    <table class="table table-bordered" id="user-list">
        <thead>
            <tr>
                <th>STT</th>
                <th>Email</th>
                <th>Họ Tên</th>
                
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Giới tính</th>
                <th>Ngày sinh</th>
                <th>Ngày tạo</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <!-- Danh sách người dùng sẽ được hiển thị ở đây -->
        </tbody>
    </table>
</div>

<!-- Popup chỉnh sửa người dùng -->
<div id="editUserModal" class="modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Chỉnh sửa người dùng</h2>
                <button type="button" class="close" id="closeEditModal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" id="editUserId">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" id="editUserEmail" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" id="editUserFirstName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Họ</label>
                        <input type="text" id="editUserLastName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="tel" id="editUserPhoneNumber" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" id="editUserAddress" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label>
                        <select id="editUserGender" class="form-control">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Ngày sinh</label>
                        <input type="date" id="editUserBirthDate" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Vai trò</label>
                        <select id="editUserRole" class="form-control" required>
                            <!-- Vai trò sẽ được thêm từ API -->
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/areas/admin/usermanagement/usermanagement.js"></script>



